<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Presionado ponemos un borde negro e invertirmos el gradient -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#191919" />
            <gradient android:angle="-90" android:startColor="@color/colorPrimaryDark" android:endColor="@color/colorPDark2"  />
        </shape>
    </item>
    <!-- El boton tiene el foco-->
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#191919" />
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <!-- Forma original del boton sin presionar  -->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorStrokeBoton" />
            <gradient android:angle="-90" android:startColor="@color/colorPDark2" android:endColor="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>